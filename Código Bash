#!/bin/bash

# FunÃ§Ã£o para listar diretÃ³rios
listar_diretorios() {
    echo -e "\e[1m\e[34mğŸ“‚ === Lista de DiretÃ³rios ===\e[0m"
    find . -maxdepth 1 -type d -exec basename {} \; | sed '/^\.$/d' | sed 's/^/ğŸ“ /'
}

# FunÃ§Ã£o para criar um novo diretÃ³rio
criar_diretorio() {
    echo -e "\e[1m\e[33mğŸ“ Criar Novo DiretÃ³rio\e[0m"
    read -p "Nome do novo diretÃ³rio: " novo_diretorio
    if [ -z "$novo_diretorio" ]; then
        echo -e "\e[1;31mNome invÃ¡lido. Tente novamente.\e[0m"
    else
        mkdir "$novo_diretorio" && echo -e "\e[1;32mDiretÃ³rio '$novo_diretorio' criado.\e[0m" || echo -e "\e[1;31mFalha ao criar diretÃ³rio.\e[0m"
    fi
}

# FunÃ§Ã£o para excluir um diretÃ³rio
excluir_diretorio() {
    echo -e "\e[1m\e[31mğŸ—‘ï¸ Excluir DiretÃ³rio\e[0m"
    read -p "Nome do diretÃ³rio a ser excluÃ­do: " diretorio_excluir
    if [ -z "$diretorio_excluir" ]; then
        echo -e "\e[1;31mNome invÃ¡lido. Tente novamente.\e[0m"
    else
        rm -rf "$diretorio_excluir" 2>/dev/null && echo -e "\e[1;32mDiretÃ³rio '$diretorio_excluir' excluÃ­do.\e[0m" || echo -e "\e[1;31mFalha ao excluir diretÃ³rio.\e[0m"
    fi
}

# FunÃ§Ã£o para acessar um diretÃ³rio
acessar_diretorio() {
    echo -e "\e[1m\e[35mğŸ“‚ Acessar DiretÃ³rio\e[0m"
    read -p "Nome do diretÃ³rio: " nome_dir
    cd "$nome_dir" 2>/dev/null || echo -e "\e[1;31mDiretÃ³rio nÃ£o encontrado.\e[0m"
}

# Loop do menu
while true; do
    echo -e "\e[1m\e[33m=== DirectT - Gerenciador de DiretÃ³rios ===\e[0m"
    echo -e "Selecione uma opÃ§Ã£o:"
    echo -e "1. \e[1;36mListar diretÃ³rios\e[0m ğŸ“‚"
    echo -e "2. \e[1;36mCriar diretÃ³rio\e[0m ğŸ“"
    echo -e "3. \e[1;36mExcluir diretÃ³rio\e[0m ğŸ—‘ï¸"
    echo -e "4. \e[1;36mAcessar diretÃ³rio\e[0m ğŸ“‚"
    echo -e "5. \e[1;36mSair\e[0m ğŸšª"

    read -p "OpÃ§Ã£o: " opcao

    case $opcao in
        1) listar_diretorios ;;
        2) criar_diretorio ;;
        3) excluir_diretorio ;;
        4) acessar_diretorio ;;
        5) echo -e "\e[1;33mSaindo...\e[0m"; break ;;
        *) echo -e "\e[1;31mOpÃ§Ã£o invÃ¡lida.\e[0m" ;;
    esac
done
